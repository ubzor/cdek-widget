{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "baseUrl": "./",
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@yandex/ymaps3-types",
            "./types"
        ],
        "paths": {
            "ymaps3": ["./node_modules/@yandex/ymaps3-types"],
            "@/*": ["./src/*"],
            "#/*": ["./types/*"]
        }
    },
    "include": ["src/**/*", "types/**/*"]
}
